<UserControl x:Class="WpfApp.NavigationBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:components="clr-namespace:WpfApp.Components"
             Height="30" HorizontalAlignment="Stretch" Background="Blue">
    <DockPanel HorizontalAlignment="Stretch" VerticalAlignment="Top" LastChildFill="True" >
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Image Source="{Binding Source={x:Static components:Resource.logoSTB_png}}" Width="123" Height="24" Margin="5"/>
            <Button x:Name="HomeButton" Content="Home" Width="100" Click="HomeButton_Click" Margin="5"/>
            <Button x:Name="LoginButton"  Content="Log in/out" Width="100" Click="LoginButton_Click" Margin="5"/>
            <Button x:Name="SearchButton" Content="Search for Transport" Width="150" Click="SearchButton_Click" Margin="5"/>
        </StackPanel>
    </DockPanel>
</UserControl>
