<UserControl x:Class="WpfApp.NavigationBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:components="clr-namespace:WpfApp.Components"
             xmlns:local="clr-namespace:WpfApp.ViewModel"
             Height="30" HorizontalAlignment="Stretch" Background="Blue">
    
    <UserControl.DataContext>
        <local:NavigationBarViewModel />
    </UserControl.DataContext>
    
    <DockPanel HorizontalAlignment="Stretch" VerticalAlignment="Top" LastChildFill="True" >
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Image Source="{Binding Logo}" Width="123" Height="24" Margin="5"/>
            <Button x:Name="HomeButton" Content="Home" Width="100" Command="{Binding NavigateHomeCommand}" Margin="5"/>
            <Button x:Name="LoginButton"  Content="Log in/out" Width="100" Command="{Binding NavigateLoginCommand}" Margin="5"/>
            <Button x:Name="SearchButton" Content="Search for Transport" Width="150" Command="{Binding NavigateSearchCommand}" Margin="5"/>
        </StackPanel>
    </DockPanel>
</UserControl>
